<h2>Sign Up</h2>

<% if @user.errors.any? %>
<%= erb :"_errors", locals: {errors: @user.errors} %>
<% end %>

<form method="POST" action="/users">
  <input type="text" name="user[email]" placeholder="Email" value="<%= @user.email %>"><br>
  <input type="text" name="user[username]" placeholder="Username" value="<%= @user.username %>"><br>
  <input type="password" name="user[password]" placeholder="Password" value=""><br>
  <input type="submit" value="Register">
</form>
